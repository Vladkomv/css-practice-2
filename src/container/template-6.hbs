<header class="header">
  <div>
    {{> logo}}
  </div>
  <nav class="header_nav">
    <div class="header_nav_right">
      {{> nav list=header}}
    </div>
  </nav>
</header>

<main class="main">
  {{#with info}}
  <div class="info">
    <h1 class="info_title">{{title}}</h1>
    <p class="info_text">{{description}}</p>
  </div>
  {{/with}}

  {{#with form}}
  <form class="form">
    <h2 class="form_title">{{title}}</h2>
    <div class="form_input_list">
      {{#each inputs}}
      <input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}" id="form-input-{{id}}">
      {{/each}}
    </div>

    <div class="form_checkbox">
      <input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
      <div class=""></div>
      <label for="{{checkbox.name}}">{{checkbox.label}}</label>
    </div>

    <button type="submit" class="form_button">{{button}} </button>
    <span class="form_border"></span>
    <p class="form_info">{{info}}</p>
  </form>
  {{/with}}
</main>

{{#with updates}}
<div class="updates">
  <h2 class="updates_title">{{title}}</h2>
  {{#each list}}
  <div class="updates_list">
    <div class="updates_photo"><img src="https://picsum.photos/32/32" alt="photo"></div>
    <div class="updates_item">
      <strong>@{{nickname}}</strong>
      <p>{{description}} </p>
    </div>
  </div>
  {{/each}}

  <a href="{{show_all.url}}" class="updates_link">{{show_all.text}}</a>
</div>
{{/with}}

{{#with expirience}}
<div class="expirience">
  <h3 class="expirience_title">{{title}}</h3>
  <span class="expirience_badge">hot!</span>
  <div class="expirience_list">
    {{#each list}}
    <div class="expirience_card">
      <strong>{{name}}</strong>
      <p>{{details}}</p>
    </div>
    {{/each}}
  </div>
</div>
{{/with}}

<footer class="footer">
  <div>
    {{> logo}}
    <span class="footer_copyright">Â© 2023</span>
  </div>
  {{#each footer}}
  <div>
    <span class="footer_title">{{title}}</span>
    {{> nav list=links isVertical=true}}
  </div>
  {{/each}}
</footer>