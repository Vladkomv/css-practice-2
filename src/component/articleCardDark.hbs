{{#with data}}
<div class="card card_{{id}}">
  <div class="card_image" style="background-image: url({{photo}});">
    {{#if isNew}}<span class="ad_badge card_badge">new</span>{{/if}}
  </div>
  <h2 class="card_title">{{name}}</h2>
  <p class="card_text">{{description}}</p>
  <a href="#" class="button card_button">Read All</a>
</div>
{{/with}}